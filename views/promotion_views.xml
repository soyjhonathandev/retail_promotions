<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ====================================
         VISTA DE LISTA/TREE
         ==================================== -->
    
    <record id="promotion_tree_view" model="ir.ui.view">
        <field name="name">retail.promotion.tree</field>
        <field name="model">retail.promotion</field>
        <field name="arch" type="xml">
            <tree string="Promotions" 
                  decoration-success="state == 'active'"
                  decoration-warning="state == 'draft'"
                  decoration-danger="state == 'expired'"
                  decoration-muted="state == 'cancelled'">
                
                <field name="code"/>
                <field name="name"/>
                <field name="discount_type"/>
                <field name="discount" attrs="{'invisible': [('discount_type', '!=', 'percentage')]}"/>
                <field name="fixed_discount" attrs="{'invisible': [('discount_type', '!=', 'fixed')]}"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_remaining"/>
                <field name="state"/>
                <field name="is_valid"/>
                <field name="current_usage"/>
                <field name="usage_limit"/>
                <field name="active" invisible="1"/>
                
                <!-- Botones de acción rápida -->
                <button name="action_activate" 
                        type="object" 
                        icon="fa-play" 
                        title="Activate Promotion"
                        attrs="{'invisible': [('active', '=', True)]}"/>
                
                <button name="action_deactivate" 
                        type="object" 
                        icon="fa-pause" 
                        title="Deactivate Promotion"
                        attrs="{'invisible': [('active', '=', False)]}"/>
            </tree>
        </field>
    </record>

    <!-- ====================================
         VISTA DE FORMULARIO
         ==================================== -->
    
    <record id="promotion_form_view" model="ir.ui.view">
        <field name="name">retail.promotion.form</field>
        <field name="model">retail.promotion</field>
        <field name="arch" type="xml">
            <form string="Promotion">
                <!-- Header con botones y statusbar -->
                <header>
                    <button name="action_activate" 
                            string="Activate" 
                            type="object" 
                            class="oe_highlight"
                            attrs="{'invisible': [('active', '=', True)]}"/>
                    
                    <button name="action_deactivate" 
                            string="Deactivate" 
                            type="object"
                            attrs="{'invisible': [('active', '=', False)]}"/>
                    
                    <button name="action_duplicate" 
                            string="Duplicate" 
                            type="object"/>
                    
                    <field name="state" widget="statusbar" statusbar_visible="draft,active,expired"/>
                </header>
                
                <sheet>
                    <!-- Botones estadísticos -->
                    <div class="oe_button_box" name="button_box">
                        <button name="%(action_sale_order_promotions)d" 
                                type="action" 
                                class="oe_stat_button" 
                                icon="fa-shopping-cart"
                                context="{'search_default_promotion_id': active_id}">
                            <field name="current_usage" widget="statinfo" string="Usage"/>
                        </button>
                        
                        <button class="oe_stat_button" icon="fa-calendar">
                            <field name="days_remaining" widget="statinfo" string="Days Remaining"/>
                        </button>
                    </div>
                    
                    <!-- Título principal -->
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="Promotion name"/>
                        </h1>
                        <h2>
                            <field name="code" placeholder="PROMO-001"/>
                        </h2>
                    </div>
                    
                    <!-- Alertas y badges -->
                    <div class="alert alert-success" 
                         attrs="{'invisible': [('is_valid', '=', False)]}" 
                         role="alert">
                        <strong>Valid Promotion!</strong> This promotion is active and can be applied.
                    </div>
                    
                    <div class="alert alert-warning" 
                         attrs="{'invisible': ['|', ('state', '!=', 'draft'), ('active', '=', False)]}" 
                         role="alert">
                        <strong>Draft Promotion</strong> Activate the promotion so it can be applied.
                    </div>
                    
                    <div class="alert alert-danger" 
                         attrs="{'invisible': [('state', '!=', 'expired')]}" 
                         role="alert">
                        <strong>Expired Promotion</strong> This promotion can no longer be applied.
                    </div>
                    
                    <!-- Campos principales -->
                    <group>
                        <group string="General Information">
                            <field name="active"/>
                            <field name="is_valid" readonly="1"/>
                            <field name="description"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                        
                        <group string="Validity">
                            <field name="start_date"/>
                            <field name="end_date"/>
                            <field name="days_remaining" readonly="1"/>
                        </group>
                    </group>
                    
                    <!-- Configuración de descuento -->
                    <group string="Discount Configuration">
                        <group>
                            <field name="discount_type" widget="radio" options="{'horizontal': true}"/>
                            <field name="discount" 
                                   attrs="{'invisible': [('discount_type', '!=', 'percentage')], 'required': [('discount_type', '=', 'percentage')]}"
                                   widget="percentage"/>
                            <field name="fixed_discount" 
                                   attrs="{'invisible': [('discount_type', '!=', 'fixed')], 'required': [('discount_type', '=', 'fixed')]}"/>
                        </group>
                        
                        <group>
                            <field name="minimum_amount"/>
                            <field name="usage_limit"/>
                            <field name="customer_limit"/>
                        </group>
                    </group>
                    
                    <!-- Notebook con tabs -->
                    <notebook>
                        <!-- Tab de Productos -->
                        <page string="Products" name="products">
                            <field name="product_ids">
                                <tree editable="bottom">
                                    <field name="default_code"/>
                                    <field name="name"/>
                                    <field name="categ_id"/>
                                    <field name="list_price"/>
                                    <field name="qty_available"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Tab de Categorías -->
                        <page string="Categories" name="categories">
                            <field name="category_ids">
                                <tree>
                                    <field name="complete_name"/>
                                    <field name="product_count"/>
                                </tree>
                            </field>
                        </page>
                        
                        <!-- Tab de Estadísticas -->
                        <page string="Statistics" name="statistics">
                            <group>
                                <group string="Promotion Usage">
                                    <field name="current_usage" readonly="1"/>
                                    <field name="usage_limit" readonly="1"/>
                                </group>
                                
                                <group string="State">
                                    <field name="state" readonly="1"/>
                                    <field name="is_valid" readonly="1"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                
                <!-- Chatter para seguimiento -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- ====================================
         VISTA KANBAN
         ==================================== -->
    
    <record id="promotion_kanban_view" model="ir.ui.view">
        <field name="name">retail.promotion.kanban</field>
        <field name="model">retail.promotion</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column">
                <field name="name"/>
                <field name="code"/>
                <field name="discount"/>
                <field name="fixed_discount"/>
                <field name="discount_type"/>
                <field name="start_date"/>
                <field name="end_date"/>
                <field name="days_remaining"/>
                <field name="state"/>
                <field name="is_valid"/>
                <field name="active"/>
                <field name="current_usage"/>
                <field name="usage_limit"/>
                
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_card oe_kanban_global_click">
                            <div class="oe_kanban_content">
                                <!-- Header de la tarjeta -->
                                <div class="o_kanban_record_top">
                                    <div class="o_kanban_record_headings">
                                        <strong class="o_kanban_record_title">
                                            <field name="name"/>
                                        </strong>
                                        <div class="o_kanban_record_subtitle">
                                            <i class="fa fa-barcode"/> <field name="code"/>
                                        </div>
                                    </div>
                                    
                                    <!-- Badge de estado -->
                                    <span class="badge badge-pill float-right"
                                          t-attf-class="#{record.is_valid.raw_value ? 'badge-success' : 'badge-secondary'}">
                                        <t t-if="record.is_valid.raw_value">Valid</t>
                                        <t t-else="">Inactive</t>
                                    </span>
                                </div>
                                
                                <!-- Contenido principal -->
                                <div class="o_kanban_record_body">
                                    <div class="row">
                                        <div class="col-8">
                                            <!-- Descuento -->
                                            <div class="mb-2">
                                                <i class="fa fa-percent text-primary"/>
                                                <span class="ml-1">
                                                    <t t-if="record.discount_type.raw_value == 'percentage'">
                                                        <field name="discount"/>%
                                                    </t>
                                                    <t t-else="">
                                                        $<field name="fixed_discount"/>
                                                    </t>
                                                </span>
                                            </div>
                                            
                                            <!-- Fechas -->
                                            <div class="small text-muted">
                                                <i class="fa fa-calendar"/>
                                                <field name="start_date"/> - <field name="end_date"/>
                                            </div>
                                        </div>
                                        
                                        <div class="col-4 text-right">
                                            <!-- Días restantes -->
                                            <div class="mb-1">
                                                <span class="badge badge-info">
                                                    <field name="days_remaining"/> days
                                                </span>
                                            </div>
                                            
                                            <!-- Usos -->
                                            <div class="small">
                                                <t t-if="record.usage_limit.raw_value > 0">
                                                    <field name="current_usage"/>/<field name="usage_limit"/>
                                                </t>
                                                <t t-else="">
